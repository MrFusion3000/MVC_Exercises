@model IEnumerable<MVC_Exercises.Models.PeopleModel>

@{
    ViewData["Title"] = "DisplayPeopleDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<form action="People List" method="post">
    <p><input type="text" name="_name" placeholder="Enter Name to search for" /></p>
    <p><input type="text" name="_city" placeholder="Enter City to search for" /></p>

    <p><input type="submit" name="submit" value="Search" /></p>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
            </tr>
        }
    </tbody>
</table>
